<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" Title="MainWindow"
        WindowState="Maximized" >
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Herramientas">
                <MenuItem Header="_New" Click="MenuItem_Click_New"/>
                <MenuItem Header="_Delete" Click="MenuItem_Click_Delete"/>
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />
        <CheckBox Name="CheckBox" Content="CheckBox" Height="401" VerticalAlignment="Top"/>
    </DockPanel>
</Window>
